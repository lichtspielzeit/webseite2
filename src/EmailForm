import React, { useState } from 'react';

const EmailForm = () => {
  const [email, setEmail] = useState('');
  const [firstName, setFirstName] = useState('');
  const [submitted, setSubmitted] = useState(false);
  const [error, setError] = useState(false);

  const handleSubmit = async (e) => {
    e.preventDefault();

    const apiKey = import.meta.env.VITE_BREVO_API_KEY;

    try {
      const response = await fetch('https://api.brevo.com/v3/contacts', {
        method: 'POST',
        headers: {
          accept: 'application/json',
          'api-key': apiKey,
          'content-type': 'application/json'
        },
        body: JSON.stringify({
          email: email,
          attributes: {
            FIRSTNAME: firstName
          },
          listIds: [3], // Deine Brevo-Liste â€freebieâ€œ
          updateEnabled: true
        })
      });

      if (response.status === 201 || response.status === 204) {
        setSubmitted(true);
        setError(false);
      } else {
        setSubmitted(false);
        setError(true);
      }
    } catch (err) {
      setSubmitted(false);
      setError(true);
    }
  };

  return (
    <div style={{ padding: '2rem', textAlign: 'center' }}>
      {!submitted ? (
        <form onSubmit={handleSubmit}>
          <h2>âœ¨ Hol dir dein kostenloses Freebie âœ¨</h2>

          <input
            type="text"
            placeholder="Dein Vorname"
            value={firstName}
            onChange={(e) => setFirstName(e.target.value)}
            style={{ margin: '10px', padding: '10px', width: '80%' }}
            required
          />
          <br />
          <input
            type="email"
            placeholder="Deine E-Mail-Adresse"
            value={email}
            onChange={(e) => setEmail(e.target.value)}
            style={{ margin: '10px', padding: '10px', width: '80%' }}
            required
          />
          <br />

          <button
            type="submit"
            style={{
              backgroundColor: '#8B5A9B',
              color: 'white',
              padding: '12px 24px',
              borderRadius: '8px',
              border: 'none',
              fontSize: '1rem',
              marginTop: '10px'
            }}
          >
            Jetzt kostenlos erhalten
          </button>

          <p style={{ fontSize: '0.85rem', color: '#555', marginTop: '10px' }}>
            Mit Klick auf den Button erklÃ¤rst du dich mit der Verarbeitung deiner Daten gemÃ¤ÃŸ unserer{' '}
            <a href="/datenschutz.html" style={{ color: '#8B5A9B' }}>
              DatenschutzerklÃ¤rung
            </a>{' '}
            einverstanden.
          </p>
        </form>
      ) : (
        <div>
          <h3>ğŸ‰ Danke fÃ¼r deine Anmeldung!</h3>
          <p>
            Schau gleich in dein Postfach â€“ dein Geschenk ist unterwegs ğŸ’Œ  
            Falls du es nicht findest, prÃ¼f den Spam-Ordner.
          </p>
          <p>
            Oder lade es direkt hier herunter: <br />
            <a href="/lichtspielzeit-freebie.pdf" style={{ color: '#8B5A9B' }} download>
              PDF herunterladen
            </a>
          </p>
        </div>
      )}

      {error && (
        <p style={{ color: 'red', marginTop: '10px' }}>
          Da ist etwas schiefgelaufen. Bitte versuche es spÃ¤ter erneut ğŸ™ˆ
        </p>
      )}
    </div>
  );
};

export default EmailForm;
